<resources>

    <!-- Peter: Important to use "MaterialComponents" theme when using the latest material components!
         https://github.com/material-components/material-components-android/issues/298
     -->
    <style name="CMC.AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Price panel style -->
    <style name="OrderTicket.Panel" parent="CMC.AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OrderTicket.Panel.Label" parent="OrderTicket.Panel">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OrderTicket.Panel.Label.Sell" parent="OrderTicket.Panel.Label">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="OrderTicket.Panel.Label.Buy" parent="OrderTicket.Panel.Label">
        <item name="android:textColor">@color/teal_light</item>
    </style>

    <style name="OrderTicket.Panel.Price" parent="OrderTicket.Panel">
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Input field style -->
    <style name="OrderTicket.Input" parent="CMC.AppTheme">
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
